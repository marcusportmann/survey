<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
  <persistence-unit name="Application" transaction-type="JTA">
    <jta-data-source>java:app/jdbc/ApplicationDataSource</jta-data-source>

    <class>guru.mmp.survey.model.SurveyRequest</class>
    <class>guru.mmp.survey.model.SurveyResponse</class>
    <class>guru.mmp.survey.model.SurveyResponseGroupRatingItem</class>
    <class>guru.mmp.survey.model.SurveyTemplate</class>
    <!--
    <class>guru.mmp.survey.model.SurveyTemplateGroup</class>
    <class>guru.mmp.survey.model.SurveyTemplateGroupMember</class>
    -->
    <class>guru.mmp.survey.model.SurveyTemplateGroupRatingItem</class>
    <class>guru.mmp.survey.model.SurveyTemplateGroupRatingType</class>
    <class>guru.mmp.survey.model.SurveyTemplateGroupRatingTypeConverter</class>

    <properties>
      <property name="hibernate.show_sql" value="true" />
      <property name="openjpa.jdbc.SynchronizeMappings" value="validate"/>
    </properties>
  </persistence-unit>
</persistence>

